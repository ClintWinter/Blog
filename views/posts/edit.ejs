<% include ../partials/header %>

<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
	<div class="page-header">	
		<h1>Edit "<%=post.title%>"</h1>
	</div>

	<form action="/posts/<%=post.id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="post[title]">Title</label>
			<input name="post[title]" type="text" class="form-control" value="<%=post.title%>">
		</div>

		<div class="form-group">
			<label for="post[thumbnail]">Image</label>
			<input name="post[thumbnail]" type="text" class="form-control" value="<%=post.thumbnail%>">
		</div>

		<div class="form-group">
			<label for="post[body]">Body</label>
			<textarea name="post[body]" rows="20" class="form-control"><%=post.body%></textarea>
		</div>

		<input type="submit" value="Save" class="btn btn-warning btn-lg btn-block">
	</form>
</div>


<% include ../partials/footer %>
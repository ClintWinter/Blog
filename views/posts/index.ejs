<% include ../partials/header %>

	<div class="jumbotron">
		<div class="container">
			<h1><i class="fa fa-pencil"></i> Entries</h1>
			<p>The daily musings of Clint Winter</p>
		</div>
	</div>

	<div class="row posts">
	<% posts.sort(function(a, b) {return b.created - a.created}); %>
	<% posts.forEach(function(post) { %>
		<div class="col-xs-12 col-sm-6">
		<div class="thumbnail">
			<a href="/posts/<%=post.id%>"><img class="img-responsive" src="<%=post.thumbnail%>" alt=""></a>
			<div class="caption">
				<h3 class="title"><a href="/posts/<%=post.id%>"><%=post.title%></a></h3>
				<p class="date"><%=post.created.toDateString()%></p>
				<p class="body"><%-post.body.slice(0,50)%></p>
				<hr>
				<p class="creator text-success"><%=post.author.username%></p>
			</div>
		</div>
		</div>
	<% }); %>
	</div>



<% include ../partials/footer %>